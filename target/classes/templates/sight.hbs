{{#partial "content"}}
    <a href="/sight" class="btn btn-default active"><strong>Sights</strong></a>
    <a href="/sight/new" class="btn btn-primary"><strong>New Sight</strong></a>
<!--    <a id="float" class="btn btn-danger" href="/animals/remove-all"><strong>Remove All</strong></a>-->

    {{#if sights}}
        <h3><strong><center>Registered Sights</center></strong></h3>
        {{#each sights}}
            <p><center><strong>location: </strong>{{location}}  <strong>|Ranger Name: </strong>{{rangerName}}<a id="float" class="btn btn-success" href="/sight/{{id}}/update"><Strong>Edit</Strong></a></center></p>
        {{/each}}
    {{else}}
        <h3><strong><center>No Registered Sights</center></strong></h3>
    {{/if}}

{{/partial}}
{{>layout.hbs}}