{{#partial "content"}}
<h2><strong>New Animal</strong></h2>

<form action="/animals/new" method="post">
    <div class="form-group">
        <input id="name" name="name" type="text" placeholder="Name..." class="form-control">
    </div>
    <div class="form-group">
        <input id="rangerId" name="rangerId" type="text" placeholder="Ranger Id..." class="form-control">
    </div>
    <div class="form-group">
        <select name="age" id="age" class="form-control">
            <option value="New Born" >New Born</option>
            <option value="Young" >Young</option>
            <option value="Old" >Old</option>
        </select>
    </div>
    <div class="form-group">
        <select name="health" id="health" class="form-control">
            <option value="Healthy" >Healthy</option>
            <option value="Ill" >Ill</option>
            <option value="Okay" >Okay</option>
        </select>
    </div>
    <button id="submit" type="submit" class="btn btn-success form-control"><strong>Save</strong></button>
</form>
{{/partial}}
{{>layout.hbs}}