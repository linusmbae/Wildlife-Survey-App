{{#partial "content"}}
    <a href="/sight" class="btn btn-default active"><strong>Sights</strong></a>
    <a href="/sight/new" class="btn btn-primary"><strong>New Sight</strong></a>

    <h2><strong><center>New Sight</center></strong></h2>
    {{#if animals}}
           <div id="animals">
               <h2><strong><center>Confirm Animal Id</center></strong></h2>
               <hr>
                {{#each animals}}
                    <p>{{name}} <a id="float" class="btn btn-warning">{{id}}</a></p>
                {{/each}}
           </div>
    {{/if}}
    <br>
            <form action="/sight/new" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Animal Id...">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Location...">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Ranger Name...">
                </div>
                <button id="submit" type="submit" class="btn btn-info form-control"><strong>Submit</strong></button>
            </form>


{{/partial}}
{{>layout.hbs}}